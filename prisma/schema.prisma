generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum AdminRole {
  WEBMASTER
  DEVELOPER
  ADMIN
}

model Admin {
  id        String    @id @default(cuid())
  email     String    @unique
  username  String    @unique
  password  String
  role      AdminRole @default(ADMIN)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  lastLogin DateTime?
}

model GlobalSettings {
  id        Int      @id @default(1)
  siteName        String   @default("NextCraft")
  siteLogo        String   @default("/assets/nextcraftlogo.jpg")
  siteUrl         String   @default("http://localhost:3000")
  siteDescription String   @default("Modern digital solutions for your business success.")
  siteKeywords    String   @default("nextjs, web, digital, agency")
  siteFavicon     String   @default("/assets/nextcraftlogo.jpg")
  updatedAt       DateTime @updatedAt
}

model HomePageContent {
  id              Int      @id @default(1)
  
  // Hero Section
  heroBadge       String   @default("The Future of Digital Excellence")
  heroTitle       String   @default("Elevate Your &bDigital Potential")
  heroDescription String   @db.Text
  heroBtnPrimary  String   @default("Mulai Sekarang")
  heroBtnSecondary String  @default("Pelajari Fitur")
  
  // About Section
  aboutSubtitle   String   @default("About NextCraft")
  aboutTitle      String   @default("Crafting Digital Solutions That &cMatter.")
  aboutDescription String  @db.Text
  aboutImage      String   @default("https://images.unsplash.com/photo-1522071823991-b99c223030c9")
  
  // Features Section
  featuresTitle    String   @default("Why Choose Us")
  featuresSubtitle String   @default("Our Features")
  featuresList     Json     @default("[{\"icon\": \"Zap\", \"title\": \"Fast Performance\", \"desc\": \"Optimized for speed.\"}, {\"icon\": \"ShieldCheck\", \"title\": \"Secure\", \"desc\": \"Enterprise-grade security.\"}, {\"icon\": \"Globe\", \"title\": \"Scalable\", \"desc\": \"Ready to grow.\"}]")

  // Team Section
  teamTitle        String   @default("Meet Our Team")
  teamSubtitle     String   @default("Expertise")
  teamList         Json     @default("[{\"name\": \"Alex Admin\", \"role\": \"CEO\", \"image\": \"https://i.pravatar.cc/150?u=a\"}, {\"name\": \"Sarah Dev\", \"role\": \"CTO\", \"image\": \"https://i.pravatar.cc/150?u=s\"}]")

  updatedAt       DateTime @updatedAt
}

model LoginAttempt {
  id        String   @id @default(cuid())
  ip        String   @unique
  attempts  Int      @default(1)
  lockUntil DateTime?
  updatedAt DateTime @updatedAt

  @@index([ip])
}
