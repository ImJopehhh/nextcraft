generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum AdminRole {
  WEBMASTER
  DEVELOPER
  ADMIN
}

model Admin {
  id        String    @id @default(cuid())
  email     String    @unique
  username  String    @unique
  password  String
  role      AdminRole @default(ADMIN)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  lastLogin DateTime?
}

model GlobalSettings {
  id        Int      @id @default(1)
  siteName  String   @default("NextCraft")
  siteLogo  String   @default("/assets/nextcraftlogo.jpg")
  siteUrl   String   @default("http://localhost:3000")
  updatedAt DateTime @updatedAt
}
